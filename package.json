  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Satyam/lacorazon-monorepo/issues"
  },
  "homepage": "https://github.com/Satyam/lacorazon-monorepo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Satyam/lacorazon-monorepo.git"
  },
  "workspaces": [
    "post-server",
    "post-client",
    "lit-icons",
    "lit-form",
    "vainilla-client",
    "lit-client",
    "preact-client",
    "react-client",
    "mongo-server",
    "react-client-swr",
    "lit-react-integration",
    "sanejs",
    "post-middleware",
    "rest-server",
    "rest-client"
  ],
  "scripts": {
    "build:vainilla": "npm run build -w vainilla-client",
    "build:lit": "npm run build -w lit-client",
    "build:post": "npm run build -w post-client",
    "build:preact": "npm run build -w preact-client",
    "build:icons": "npm run build -w lit-icons",
    "build:react": "npm run build -w react-client",
    "build:swr": "npm run build -w react-client-swr",
    "build:sane": "npm run build -w sanejs",
    "build:postmw": "npm run build -w post-middleware",
    "build:server": "npm run build -w post-server",
    "build:rest": "npm run build -w rest-server",
    "build:mongo": "npm run build -w mongo-server",
    "buildAll": "npm run build --workspaces --if-present",
    "w:vainilla": "npm run watch -w vainilla-client",
    "w:lit": "npm run watch -w lit-client",
    "w:post": "npm run watch -w post-client",
    "w:preact": "npm run watch -w preact-client",
    "w:react": "npm run watch -w react-client",
    "w:swr": "npm run watch -w react-client-swr",
    "w:icons": "npm run watch -w lit-icons",
    "w:rest": "npm run watch -w rest-server",
    "start": "npm start -w post-server",
    "start:rest": "npm start -w rest-server",
    "start:mongo": "npm start -w mongo-server",
    "start:sane": "npm start -w sanejs"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "chokidar-cli": "^3.0.0",
    "rollup": "^2.66.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^4.5.2"
  }
}
