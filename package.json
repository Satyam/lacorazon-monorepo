{
  "name": "@lacorazon/monorepo",
  "workspaces": [
    "post-server",
    "post-client",
    "lit-icons",
    "lit-form",
    "vainilla-client",
    "lit-client",
    "preact-client"
  ],
  "scripts": {
    "build:vainilla": "npm run build -w vainilla-client",
    "build:lit": "npm run build -w lit-client",
    "build:post": "npm run build -w post-client",
    "build:preact": "npm run build -w preact-client",
    "build:icons": "npm run build -w lit-icons",
    "buildAll": "npm run build --workspaces --if-present",
    "w:vainilla": "npm run watch -w vainilla-client",
    "w:lit": "npm run watch -w lit-client",
    "w:post": "npm run watch -w post-client",
    "w:preact": "npm run watch -w preact-client",
    "w:icons": "npm run watch -w lit-icons",
    "build:server": "npm run build -w post-server",
    "start": "npm start -w post-server"
  },
  "dependencies": {
    "bootstrap": "^5.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "rollup": "^2.66.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^4.5.2"
  }
}
